<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchParentOnly"
    tools:context="com.rodak.party_shaker.FirstLaunchActivity">

    <ImageView
        android:id="@+id/backgroundImage"
        style="@style/BackgroundImageView"
        android:src="@drawable/first_launch_background" />

    <View
        android:id="@+id/backgroundColor"
        style="@style/MatchParentOnly"
        android:background="@color/colorBackground" />

    <LinearLayout
        android:id="@+id/linearContainer"
        style="@style/FirstLaunchLinearLayout">

        <ImageView
            android:id="@+id/logoImage"
            style="@style/LogoImageView"
            android:src="@drawable/logo_transparent" />

        <TextView
            android:id="@+id/largeText"
            style="@style/WhiteBigTextView"
            android:text="@string/get_started" />

        <TextView
            android:id="@+id/smallTextFirst"
            style="@style/PinkTextView"
            android:text="@string/first_launch_text_part_1" />

        <TextView
            android:id="@+id/smallTextSecond"
            style="@style/PinkTextView"
            android:text="@string/first_launch_text_part_2" />

    </LinearLayout>

    <Button
        android:id="@+id/startButton"
        style="@style/BigButtonWithSmallText"
        android:text="@string/lets_start"/>

</RelativeLayout>