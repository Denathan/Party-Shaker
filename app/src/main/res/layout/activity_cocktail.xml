<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CocktailActivity">

    <ImageView
        android:id="@+id/backgroundImage"
        style="@style/BackgroundImageView"
        android:src="@drawable/cocktail_background" />

    <View
        android:id="@+id/backgroundColor"
        style="@style/MatchParentOnly"
        android:background="@color/colorBackground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/dp_16">

            <ProgressBar
                android:id="@+id/search_progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="@dimen/dp_220"
                android:layout_height="@dimen/dp_220"
                android:layout_gravity="center_horizontal"
                android:elevation="12dp"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                app:cardCornerRadius="45dp">

                <ImageView
                    android:id="@+id/cocktailImage"
                    android:layout_width="@dimen/dp_220"
                    android:layout_height="@dimen/dp_220"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/headerFirst"
                style="@style/PinkTextView"
                android:layout_marginTop="@dimen/dp_16"
                android:text="Ingredients list:" />

            <TextView
                android:id="@+id/firstIngredient"
                style="@style/WhiteTextView"
                android:text="@string/main_menu_option_1"
                android:visibility="gone" />

            <TextView
                android:id="@+id/secondIngredient"
                style="@style/WhiteTextView"
                android:text="@string/main_menu_option_2"
                android:visibility="gone" />

            <TextView
                android:id="@+id/thirdIngredient"
                style="@style/WhiteTextView"
                android:text="@string/main_menu_option_3"
                android:visibility="gone" />

            <TextView
                android:id="@+id/fourthIngredient"
                style="@style/WhiteTextView"
                android:text="@string/main_menu_option_4"
                android:visibility="gone" />

            <TextView
                android:id="@+id/fifthIngredient"
                style="@style/WhiteTextView"
                android:text="@string/main_menu_option_5"
                android:visibility="gone" />

            <TextView
                android:id="@+id/sixthIngredient"
                style="@style/WhiteTextView"
                android:text="@string/main_menu_option_1"
                android:visibility="gone" />

            <TextView
                android:id="@+id/seventhIngredient"
                style="@style/WhiteTextView"
                android:text="@string/main_menu_option_2"
                android:visibility="gone" />

            <TextView
                android:id="@+id/eighthIngredient"
                style="@style/WhiteTextView"
                android:text="@string/main_menu_option_3"
                android:visibility="gone" />

            <TextView
                android:id="@+id/ninthIngredient"
                style="@style/WhiteTextView"
                android:text="@string/main_menu_option_4"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tenthIngredient"
                style="@style/WhiteTextView"
                android:text="@string/main_menu_option_5"
                android:visibility="gone" />

            <TextView
                android:id="@+id/eleventhIngredient"
                style="@style/WhiteTextView"
                android:text="@string/main_menu_option_1"
                android:visibility="gone" />

            <TextView
                android:id="@+id/twelfthIngredient"
                style="@style/WhiteTextView"
                android:text="@string/main_menu_option_2"
                android:visibility="gone" />

            <TextView
                android:id="@+id/thirteenthIngredient"
                style="@style/WhiteTextView"
                android:text="@string/main_menu_option_3"
                android:visibility="gone" />

            <TextView
                android:id="@+id/fourteenthIngredient"
                style="@style/WhiteTextView"
                android:text="@string/main_menu_option_4"
                android:visibility="gone" />

            <TextView
                android:id="@+id/fifteenthIngredient"
                style="@style/WhiteTextView"
                android:text="@string/main_menu_option_5"
                android:visibility="gone" />

            <TextView
                android:id="@+id/headerSecond"
                style="@style/PinkTextView"
                android:layout_marginTop="@dimen/dp_16"
                android:text="Glass:" />

            <TextView
                android:id="@+id/glass"
                style="@style/WhiteTextView"
                android:text="@string/main_menu_option_5"
                android:visibility="gone" />

            <TextView
                android:id="@+id/headerThird"
                style="@style/PinkTextView"
                android:layout_marginTop="@dimen/dp_16"
                android:text="Instructions:" />

            <TextView
                android:id="@+id/instructions"
                style="@style/WhiteTextView"
                android:text="@string/main_menu_option_5"
                android:visibility="gone"
                android:paddingBottom="@dimen/dp_40"/>


        </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>